{
  "compilerOptions": {
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "$hooks/*": ["hooks/*"],
      "$types/*": ["types/*"],
      "$utils/*": ["utils/*"],
      "$layouts/*": ["layouts/*"],
      "$screens/*": ["screens/*"],
      "$svgs/*": ["assets/svgs/*"],
      "$components/*": ["components/*"],
      "$pages/*": ["pages/*"],
    },
    "incremental": true
  },
  "include": ["./scripts", "./test", "./typechain", "next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "files": ["./hardhat.config.ts"],
  "exclude": ["node_modules"]
}
