{
  "compilerOptions": {
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["./scripts", "./test", "./typechain", "next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "files": ["./hardhat.config.ts"],
  "exclude": ["node_modules"]
}
